{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "depend_process": {
      "type": "object",
      "properties": {
        "$and": {
          "type": "array",
          "items": { "$ref": "#/definitions/depend_process" }
        },
        "$or": {
          "type": "array",
          "items": { "$ref": "#/definitions/depend_process" }
        }
      }
    },
    "output_process": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file_name", "write"],
        "properties": {
          "file_name": {
            "type": "string"
          },
          "write": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "concat": {
            "type": "boolean"
          },
          "maxsize": {
            "type": "string"
          }
        }
      }
    },
    "notifications_process": {
      "type": "object",
      "properties": {
        "on_start": {
          "type": "array",
          "description": "Notifications at the start of the process",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        },
        "on_end": {
          "type": "array",
          "description": "Notifications at the end of the process",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        },
        "on_fail": {
          "type": "array",
          "items": {
            "type": "object",
            "description": "Notifications when the process fails",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        },
        "on_retry": {
          "type": "array",
          "description": "Notifications when the process retry",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        },
        "on_queue": {
          "type": "array",
          "description": "Notifications when the process is added to the queue",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        },
        "on_timeout": {
          "type": "array",
          "description": "Notifications when the process exceeds the maximum time for execution",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        },
        "on_waiting_dependencies": {
          "type": "array",
          "description": "Notifications when waiting for dependency with another process",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "chain_action_on_fail_process": {
      "oneOf": [
        {
          "type": "string",
          "description": "Action to be performed by the chain in case the process fails",
          "enum": ["abort", "continue", "retry"]
        },
        {
          "type": "object",
          "description": "Action to be performed by the chain in case the process fails",
          "required": ["action"],
          "properties": {
            "action": {
              "type": "string",
              "enum": ["abort", "continue", "retry", "end"]
            }
          }
        }
      ]
    }
  },
  "type": "object",
  "required": ["id", "name", "exec"],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "depends_process": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        { "$ref": "#/definitions/depend_process" }
      ]
    },
    "queue": {
      "type": "string"
    },
    "priority": {
      "type": "number"
    },
    "exec": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string"
        },
        "command": {
          "type": "string"
        },
        "command_file": {
          "type": "string"
        }
      }
    },
    "retries": {
      "type": "number"
    },
    "retry_delay": {
      "type": ["number", "string"]
    },
    "notificate_only_last_fail": {
      "type": "boolean"
    },
    "timeout": {
      "type": "object",
      "required": ["delay"],
      "properties": {
        "action": {
          "type": "string"
        },
        "delay": {
          "type": ["number", "string"]
        }
      }
    },
    "chain_action_on_fail": {
      "$ref": "#/definitions/chain_action_on_fail_process"
    },
    "ignore_in_final_chain_status": {
      "type": "boolean"
    },
    "output": { "$ref": "#/definitions/output_process" },
    "output_share": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["key", "name", "value"],
        "properties": {
          "key": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    },
    "output_iterable": {
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "PROCESS_EXEC_DATA_OUTPUT"
          ]
        },
        {
          "type": "string"
        }
      ]
    },
    "notifications": { "$ref": "#/definitions/notifications_process" }
  }
}
