{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "output_process": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file_name", "write"],
        "properties": {
          "file_name": {
            "type": "string"
          },
          "write": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "concat": {
            "type": "boolean"
          },
          "maxsize": {
            "type": "string"
          }
        }
      }
    },
    "notifications_process": {
      "type": "object",
      "properties": {
        "on_start": {
          "type": "array",
          "description": "Notifications at the start of the process",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        },
        "on_end": {
          "type": "array",
          "description": "Notifications at the end of the process",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        },
        "on_fail": {
          "type": "array",
          "items": {
            "type": "object",
            "description": "Notifications when the process fails",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        },
        "on_retry": {
          "type": "array",
          "description": "Notifications when the process retry",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        },
        "on_queue": {
          "type": "array",
          "description": "Notifications when the process is added to the queue",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        },
        "on_timeout": {
          "type": "array",
          "description": "Notifications when the process exceeds the maximum time for execution",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        },
        "on_waiting_dependencies": {
          "type": "array",
          "description": "Notifications when waiting for dependency with another process",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "chain_action_on_fail_process": {
      "oneOf": [
        {
          "type": "string",
          "enum": ["abort", "continue", "retry"]
        },
        {
          "type": "object",
          "required": ["action"],
          "properties": {
            "action": {
              "type": "string",
              "enum": ["abort", "continue", "retry", "end"]
            }
          }
        }
      ]
    }
  },
  "type": "object",
  "required": ["id", "name", "processes"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier of the chain"
    },
    "name": {
      "type": "string",
      "description": "Identifying name of the chain"
    },
    "execId": {
      "type": "string"
    },
    "queue": {
      "type": "string",
      "description": "Queue identifier to subscribe to the chain"
    },
    "priority": {
      "type": "number",
      "description": "Chain priority"
    },
    "input": {
      "type": "array",
      "description": "Input data mapping interface"
    },
    "custom_values": {
      "type": "object",
      "description": "Custom data (can be overwritten on command line)"
    },
    "retries": {
      "type": "number",
      "description": "Number of retries before failing"
    },
    "retry_delay": {
      "type": ["number", "string"],
      "description": "Delay time between each retry"
    },
    "triggers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "calendars": {
            "type": "object",
            "properties": {
              "enable": {
                "type": "string"
              },
              "disable": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "depends_chains": {
      "type": ["array", "object"],
      "description": "Declaration of dependencies with other chains"
    },
    "notifications": {
      "type": "object",
      "properties": {
        "on_start": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        },
        "on_end": {
          "type": "array",
          "description": "Notifications at the end of the chain",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        },
        "on_fail": {
          "type": "array",
          "description": "Notifications when the chain fails",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        },
        "on_retry": {
          "type": "array",
          "description": "Notifications when the chain retry",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        },
        "on_waiting_dependencies": {
          "type": "array",
          "description": "Notifications when waiting for dependency with another chain",
          "items": {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "defaults_processes": {
      "type": "object",
      "properties": {
        "notifications": {
          "$ref": "#/definitions/notifications_process"
        },
        "chain_action_on_fail": {
          "$ref": "#/definitions/chain_action_on_fail_process"
        },
        "ignore_in_final_chain_status": {
          "type": "boolean"
        },
        "output": {
          "$ref": "#/definitions/output_process"
        }
      }
    },
    "processes": {
      "type": "array",
      "items": {
        "$ref": "./process-2.6.json"
      }
    }
  }
}
